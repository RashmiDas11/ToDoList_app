<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/rootlayout"
    android:background="#C67391"
    android:layout_height="match_parent"
    android:dividerPadding="0dp"
    android:orientation="vertical"
    android:padding="10dp"
    app:layout_constraintCircleRadius="8dp">
    <TextView
        android:id="@+id/editTaskHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Edit Task"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />


    <ImageView
        android:id="@+id/myaddedimage"
        android:layout_width="250dp"
        android:layout_height="220dp"
        android:layout_below="@id/editTaskHeading"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:foregroundGravity="center"
        android:src="@drawable/baseline_insert_photo_24" />


        <LinearLayout
            android:id="@+id/titleLayout"
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"

            android:layout_height="wrap_content"
            android:layout_below="@id/myaddedimage"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="14dp"
                android:background="@drawable/ic_assignment_pink_24"
                tools:ignore="ContentDescription" />

            <EditText
                android:id="@+id/edit_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:textSize="20dp"
                android:hint="My task"
                android:inputType="text"
                android:textColor="#000000 "
                android:textColorHint="#17202A " />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dateLayout"

            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/titleLayout"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="17dp"
                android:background="@drawable/ic_outline_event_available_pink_24"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/dialogDate"
                android:layout_marginTop="16dp"
                android:textSize="20dp"
                android:layout_marginBottom="16dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="?attr/dialogTextColor"
                android:textColorHint="?attr/dialogDateColor" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/timelayoutedit"

            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dateLayout"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="17dp"
                android:background="@drawable/ic_baseline_timer_pink_24"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:text="@string/dialogTime"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="?attr/dialogTextColor"
                android:textColorHint="?attr/dialogDateColor" />
        </LinearLayout>

